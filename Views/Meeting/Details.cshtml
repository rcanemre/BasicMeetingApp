@model Userinfo;
@{
    ViewBag.Title = "Apply Details";
}
@{
    var className = Model.WillAttend == true ? "primary" : "danger";
}
<h1 class="h4">Başvuru Detay</h1>
<p>
    <span class="badge text-bg-@className">
        @if(Model.WillAttend == true)
        {
            <text>Katılıyor</text>
        }
        else
        {
            <text>Katılmıyor</text>
        }
    </span>
</p>
<p>Adı : @Model.Name</p>
<p>Email : @Model.Email</p>
<p>Telefon : @Model.Phone</p>
<a asp-controller="Meeting" asp-action="List" class="btn btn-outline-@className">Katılımcı Listesine Dön</a>
